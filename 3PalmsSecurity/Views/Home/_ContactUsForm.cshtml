@model _3PalmsSecurity.ViewModels.ContactUsViewModel

<div class="container">
    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { id = "contact-us-form" }))
    {
        <div class="form-group row">
            @Html.LabelFor(c => c.Name, new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Name)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(c => c.Company, new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.TextBoxFor(c => c.Company, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Company)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(c => c.Email, new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Email)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(c => c.Phone, new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Phone)
            </div>
        </div>
        <button type="submit" class="btn btn-outline-secondary my-2 my-sm-0 float-right submit-button">Send</button>
        <div style="clear:both"></div>
    }
</div>
