@section scripts
{
    <script type="text/javascript" src="//www.google.com/recaptcha/api.js" async></script>
    <script>
        $(document).ready(function () {
            var navbarOffset = $("nav").outerHeight();

            // Client side validation for
            $.validator.unobtrusive.parse($("#contact-us-form"));

            $("#home-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $(".header").offset().top - navbarOffset
                }, 'slow');
            });

            $("#what-we-do-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#what-we-do").offset().top - navbarOffset
                }, 'slow');
            });

            $("#solutions-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#solutions").offset().top - navbarOffset
                }, 'slow');
            });

            $("#who-we-serve-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#who-we-serve").offset().top - navbarOffset
                }, 'slow');
            });

            $("#who-we-are-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#who-we-are").offset().top - navbarOffset
                }, 'slow');
            });

            $("#contact-us-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#contact-us").offset().top - navbarOffset
                }, 'slow');
            });

            $(document).on("submit", function (e, data) {
                e.preventDefault();

                var recaptcha = $("#g-recaptcha-response").val();
                if (recaptcha === "") {
                    event.preventDefault();
                    bootbox.dialog({
                        message: "Please check the captcha before submitting the form.",
                        buttons: {
                            confirm: {
                                label: 'Close',
                                className: 'btn-outline-primary'
                            },
                        },
                        callback: function () { }
                    });

                    return;
                }

                var form = e.target;
                var formData = new FormData(form);

                var submitButton = $(".submit-button");
                var submitButtonHtml = submitButton.html();
                // Show spinner on submit button and disable it
                submitButton.html('<div class="loader"></div>');
                submitButton.attr("disabled", true);

                $.ajax({
                    url: form.action,
                    type: 'POST',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false
                })
                    .then(function (response) {
                        bootbox.dialog({
                            message: "Thank you for your interest! We have received your inquiry we will be reaching out to you soon.",
                            buttons: {
                                confirm: {
                                    label: 'Close',
                                    className: 'btn-outline-primary'
                                },
                            },
                            callback: function () { }
                        });

                        // Remove spinner from submit button
                        submitButton.html(submitButtonHtml);
                        submitButton[0].classList.add("btn-outline-secondary-disabled");
                        submitButton[0].classList.remove("btn-outline-secondary");
                    })
                    .fail(function (error) {
                        bootbox.dialog({
                            message: "An error occurred while submitting the form.<br /><br />Error: " + error.statusText,
                            buttons: {
                                confirm: {
                                    label: 'Close',
                                    className: 'btn-outline-primary'
                                },
                            },
                            callback: function () { }
                        });

                        // Remove spinner from submit button and enable so user can try to resubmit
                        submitButton.html(submitButtonHtml);
                        submitButton.attr("disabled", false);

                        grecaptcha.reset();
                    });
            });
        });
    </script>
}
