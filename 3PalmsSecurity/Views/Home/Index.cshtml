{
    <script type="text/javascript" src="//www.google.com/recaptcha/api.js" async></script>    
    <script>
        $(document).ready(function () {
            onResize();

            var navbarOffset = $("nav").outerHeight() - 1;

            // Client side validation for
            $.validator.unobtrusive.parse($("#contact-us-form"));

            $('.show-buttons-icon').on('click', function (e) {
                $(e.target).hide();
                $(e.target).siblings().show(750);
            });

            $('.solutions-text').on('click', function (e) {
                $(e.target).hide(750);
                setTimeout(function () {
                    $(e.target).siblings().show();
                }, 750);
            });

            $("#home-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#solutions-carousel").offset().top - navbarOffset
                }, 'slow');
            });

            $("#what-we-do-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#what-we-do").offset().top - navbarOffset
                }, 'slow');
            });

            $("#solutions-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#solutions").offset().top - navbarOffset
                }, 'slow');
            });

            $("#who-we-serve-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#who-we-serve").offset().top - navbarOffset
                }, 'slow');
            });

            $("#who-we-are-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#who-we-are").offset().top - navbarOffset
                }, 'slow');
            });

            $("#contact-us-btn").click(function () {
                $('html,body').animate({
                    scrollTop: $("#contact-us").offset().top - navbarOffset
                }, 'slow');
            });

            $(document).on("submit", function (e, data) {
                e.preventDefault();

                var recaptcha = $("#g-recaptcha-response").val();
                if (recaptcha === "") {
                    event.preventDefault();
                    bootbox.dialog({
                        message: "Please check the captcha before submitting the form.",
                        buttons: {
                            confirm: {
                                label: 'Close',
                                className: 'btn-outline-primary'
                            },
                        },
                        callback: function () { }
                    });

                    return;
                }

                var form = e.target;
                var formData = new FormData(form);

                var submitButton = $(".submit-button");
                var submitButtonHtml = submitButton.html();
                // Show spinner on submit button and disable it
                submitButton.html('<div class="loader"></div>');
                submitButton.attr("disabled", true);

                $.ajax({
                    url: form.action,
                    type: 'POST',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false
                })
                    .then(function (response) {
                        bootbox.dialog({
                            message: "Thank you for your interest! We have received your inquiry we will be reaching out to you soon.",
                            buttons: {
                                confirm: {
                                    label: 'Close',
                                    className: 'btn-outline-primary'
                                },
                            },
                            callback: function () { }
                        });

                        // Remove spinner from submit button
                        submitButton.html(submitButtonHtml);
                        submitButton[0].classList.add("btn-outline-secondary-disabled");
                        submitButton[0].classList.remove("btn-outline-secondary");
                    })
                    .fail(function (error) {
                        bootbox.dialog({
                            message: "An error occurred while submitting the form.<br /><br />Error: " + error.statusText,
                            buttons: {
                                confirm: {
                                    label: 'Close',
                                    className: 'btn-outline-primary'
                                },
                            },
                            callback: function () { }
                        });

                        // Remove spinner from submit button and enable so user can try to resubmit
                        submitButton.html(submitButtonHtml);
                        submitButton.attr("disabled", false);

                        grecaptcha.reset();
                    });
            });

            // We are dynamically changing the header image to a cropped version for small devices
            function onResize() {
                width = $(window).outerWidth();

                // Dynamically resize columns in section titles so that <hr />'s look correct
                if (width > 890) {
                    $('.section-title-hr-col').css('display', 'initial');
                    $('.section-title-col').removeClass('col');
                    $('.section-title-col').removeClass('col-sm-4');
                    $('.section-title-col').addClass('col-sm-3');
                }
                if (width <= 890) {
                    $('.section-title-hr-col').css('display', 'initial');
                    $('.section-title-col').removeClass('col');
                    $('.section-title-col').removeClass('col-sm-3');
                    $('.section-title-col').addClass('col-sm-4');
                }
                if (width <= 580) {
                    $('.section-title-hr-col').css('display', 'none');
                }
                else {
                    $('.section-title-hr-col').css('display', 'initial');
                }
                // Dynamically resize banner image
                if (width <= 480) {
                    $('#verkada_banner')[0].src = "/Content/Images/verkada_banner_phone.png";
                    $('#camcloud_banner')[0].src = "/Content/Images/camcloud_banner_phone.png";
                    $('#solink_banner')[0].src = "/Content/Images/solink_banner_phone.png";
                    $('#carbon_banner')[0].src = "/Content/Images/carbon_banner_phone.png";
                    $('#controlbynet_banner')[0].src = "/Content/Images/controlbynet_banner_phone.png";
                }
                else {
                    $('#verkada_banner')[0].src = "/Content/Images/verkada_banner.png";
                    $('#camcloud_banner')[0].src = "/Content/Images/camcloud_banner.png";
                    $('#solink_banner')[0].src = "/Content/Images/solink_banner.png";
                    $('#carbon_banner')[0].src = "/Content/Images/carbon_banner.png";
                    $('#controlbynet_banner')[0].src = "/Content/Images/controlbynet_banner.png";
                }
            }
            window.addEventListener("resize", onResize);
        });
    </script>
